escape ^Tt
vbell off

startup_message off

encoding utf8
hardstatus on
hardstatus alwayslastline "%{= gk}[%m/%d %02c] %{gW} %-w%{= wk}%n%t%{-}%+w %=%{gk}$USER@$HOSTNAME[$LANG] "

startup_message off
multiuser on
defscrollback 800000

bind ^U encoding utf8
bind ^E encoding eucJP
bind ^t next
bind w windowlist -b

autodetach on

termcapinfo xterm 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'
